{
  "name": "alchemy-mono",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "module": "./lib/index.js",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sam-goodwin/alchemy"
  },
  "scripts": {
    "build": "cd ./alchemy && bunx tsc -b && bun run --filter alchemy build",
    "check": "bun run build && biome check",
    "fix": "biome check --write",
    "deploy:repo": "bun ./stacks/src/repo.run.ts",
    "deploy:website": "bun ./stacks/src/website.run.ts",
    "deploy:telemetry": "bun ./stacks/src/telemetry.run.ts",
    "generate:aws-control": "bun ./scripts/generate-aws-control.ts",
    "publish:npm": "bun run --filter alchemy publish:npm",
    "test": "bun ./alchemy/test/run.ts",
    "test:force": "vitest run",
    "bump": "bun ./scripts/bump.ts",
    "prepare": "husky"
  },
  "workspaces": [
    "alchemy-web",
    "alchemy",
    "alchemy/templates/*",
    "examples/*",
    "stacks"
  ],
  "devDependencies": {
    "@biomejs/biome": "beta",
    "@cloudflare/workers-types": "^4.20250613.0",
    "@redwoodjs/sdk": "^0.0.80",
    "@types/bun": "latest",
    "@types/node": "latest",
    "@vitest/ui": "^3.1.4",
    "alchemy": "workspace:*",
    "aws4fetch": "^1.0.20",
    "braintrust": "*",
    "changelogithub": "^13.15.0",
    "husky": "^9.1.7",
    "jsonc-parser": "^3.3.1",
    "lint-staged": "^15.3.0",
    "openai": "^4.103.0",
    "typescript": "latest",
    "vite": "^6.3.5",
    "vitest": "^3.1.4",
    "yaml": "^2.7.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs}": [
      "biome check --write --no-errors-on-unmatched",
      "biome check --no-errors-on-unmatched"
    ]
  }
}
